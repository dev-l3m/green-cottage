// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // DATABASE_URL : chargé depuis .env (local) ou variables d'environnement Vercel (déploiement).
  // Pour tester en "production" sur Vercel avec les mêmes données que en local : définir
  // dans Vercel (Settings → Environment Variables) la même valeur que dans .env.local
  // (ex. URL Prisma Accelerate ou postgres direct). Le runtime accepte aussi PRISMA_DATABASE_URL
  // via src/lib/prisma.ts si DATABASE_URL n'est pas défini.
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  image         String?
  role          UserRole  @default(CUSTOMER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bookings      Booking[]
  reviews       Review[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  CUSTOMER
  ADMIN
}

model Cottage {
  id           String   @id @default(cuid())
  slug         String   @unique
  title        String
  summary      String?  @db.Text
  description  String   @db.Text
  address      String?
  latitude     Float?
  longitude    Float?
  capacity     Int
  basePrice    Float
  cleaningFee  Float?   @default(0)
  images       String[] // Array of image URLs
  amenities    String[] // Array of amenity names
  rules        String?  @db.Text
  checkInTime  String?  @default("15:00")
  checkOutTime String?  @default("11:00")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  bookings         Booking[]
  availabilityBlocks AvailabilityBlock[]
  icalFeeds         IcalFeed[]
  reviews           Review[]
  publicReviews     PublicReview[]

  @@index([slug])
  @@index([isActive])
}

model PublicReview {
  id        String   @id @default(cuid())
  cottageId String
  slug      String   // Denormalized for easy query by slug
  rating    Int      // 1-5
  author    String?
  comment   String   @db.Text
  status    String   @default("PUBLISHED") // PUBLISHED | REJECTED
  createdAt DateTime @default(now())

  cottage Cottage @relation(fields: [cottageId], references: [id], onDelete: Cascade)

  @@index([cottageId])
  @@index([slug])
  @@index([status])
}

model AvailabilityBlock {
  id        String   @id @default(cuid())
  cottageId String
  startDate DateTime
  endDate   DateTime
  source    BlockSource @default(INTERNAL)
  sourceRef String?  // Reference to external booking ID or iCal event UID
  createdAt DateTime @default(now())

  cottage Cottage @relation(fields: [cottageId], references: [id], onDelete: Cascade)

  @@index([cottageId, startDate, endDate])
  @@index([source])
}

enum BlockSource {
  INTERNAL
  ICAL
}

model Booking {
  id                    String        @id @default(cuid())
  cottageId             String
  userId                String
  startDate             DateTime
  endDate               DateTime
  guests                Int
  options               Json          // { breakfast: boolean, cleaning: boolean, etc. }
  subtotal              Float
  touristTax            Float
  total                 Float
  status                BookingStatus @default(PENDING)
  stripeSessionId       String?       @unique
  stripePaymentIntentId String?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt

  cottage Cottage  @relation(fields: [cottageId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  invoice Invoice?
  review  Review?

  @@index([cottageId, startDate, endDate])
  @@index([userId])
  @@index([status])
  @@index([stripeSessionId])
}

enum BookingStatus {
  PENDING
  PAID
  CANCELLED
  REFUNDED
}

model Invoice {
  id           String   @id @default(cuid())
  bookingId    String   @unique
  invoiceNumber String  @unique
  pdfUrl       String?
  pdfData      Bytes?   // Store PDF as binary (alternative to S3)
  issuedAt     DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([invoiceNumber])
}

model Review {
  id        String       @id @default(cuid())
  bookingId String       @unique
  cottageId String
  userId    String
  rating    Int          // 1-5
  comment   String?      @db.Text
  status    ReviewStatus @default(PENDING)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  cottage Cottage @relation(fields: [cottageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([cottageId])
}

enum ReviewStatus {
  PENDING
  PUBLISHED
  REJECTED
}

model IcalFeed {
  id          String   @id @default(cuid())
  cottageId   String
  importUrl   String?  // URL to import from (Airbnb, Booking.com, etc.)
  exportToken String   @unique @default(cuid())
  lastSyncedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cottage Cottage @relation(fields: [cottageId], references: [id], onDelete: Cascade)

  @@index([cottageId])
  @@index([exportToken])
}

model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json     // Flexible JSON structure for different content types
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

model InvoiceCounter {
  id        String   @id @default(cuid())
  year      Int      @unique
  counter   Int      @default(0)
  updatedAt DateTime @updatedAt
}
